-- from jotunn

local spam = false
getgenv().prefix = "-" 

local plr = game.Players.LocalPlayer

function l(msg)
    game.StarterGui:SetCore("SendNotification",  {
         Title = "KahSpam";
         Text = msg;
         Duration = 1;
         Callback = NotificationBindable;
    })
end

function ccht(msssssgggg)
        game.Players:Chat(msssssgggg)
end

l("KahSpam Loaded! Cmds have been printed into the dev console.")

print("Prefix is set to " .. getgenv().prefix)
print(" ")
print("spam")
print("unspam")

plr.Chatted:connect(function(msg)
            local args = string.split(msg, " ")
            if args[1] == getgenv().prefix .. "spam" then  
                command = args[2]
                spam = true
                while spam do
                    ccht(command)
                    ccht(command)
                    ccht(command)
                    task.wait()
                end
            end
end)

plr.Chatted:connect(function(msg)
            local args = string.split(msg, " ")

            if args[1] == getgenv().prefix .. "unspam" then
                spam = false
            end
end)
    
 
